{
  "name": "notebooklm-usermanager",
  "version": "0.0.1",
  "description": "NotebookLMの共有ユーザー追加を自動化するChrome拡張機能",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "format": "prettier --write src/**/*.{js,ts,json}",
    "test": "jest",
    "test:watch": "jest --watch",
    "package": "npm run build && node scripts/package.js",
    "package:zip": "npm run package && zip -r dist/notebooklm-usermanager.zip dist/extension/",
    "clean": "rimraf dist",
    "dev": "npm run clean && npm run build:dev",
    "precommit": "npm run lint && npm run test",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "version:show": "node scripts/version.js show",
    "version:commit": "git add . && git commit -m \"chore: version bump\" && git tag -a $(node scripts/version.js show) -m \"Version $(node scripts/version.js show)\""
  },
  "keywords": [
    "chrome-extension",
    "notebooklm",
    "automation",
    "user-management"
  ],
  "author": "ambit1977",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ambit1977/notebooklm-usermanager.git"
  },
  "bugs": {
    "url": "https://github.com/ambit1977/notebooklm-usermanager/issues"
  },
  "homepage": "https://github.com/ambit1977/notebooklm-usermanager#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
    "testMatch": ["<rootDir>/src/**/*.test.{js,ts}"],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts",
      "!src/tests/**"
    ]
  }
}
