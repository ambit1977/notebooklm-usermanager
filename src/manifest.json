{
  "manifest_version": 3,
  "name": "NotebookLM User Manager",
  "version": "0.0.2",
  "description": "NotebookLMの共有ユーザー追加を自動化するChrome拡張機能",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://notebooklm.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "NotebookLM User Manager"
  },
  "content_scripts": [
    {
      "matches": [
        "https://notebooklm.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}